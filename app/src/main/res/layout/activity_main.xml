<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    android:background="@color/cardview_light_background"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtCep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:hint="Insira seu CEP"
        android:inputType="number"
        android:textColor="#595959"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBuscaCep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/design_default_color_on_primary"
            android:padding="10dp"
            android:text="Buscar CEP"
            android:textSize="22sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/respostalogradouro"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="5dp"
        android:hint="Logradouro"
        android:textColor="#000000"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/respostabairro"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="5dp"
        android:hint="Bairro"
        android:textColor="#000000"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/respostacidade"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="5dp"
        android:hint="Cidade"
        android:textColor="#000000"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/respostacomplemento"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="5dp"
        android:hint="Complemento"
        android:textColor="#000000"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/respostauf"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="5dp"
        android:hint="UF"
        android:textColor="#000000"
        android:textSize="20sp" />



</LinearLayout>